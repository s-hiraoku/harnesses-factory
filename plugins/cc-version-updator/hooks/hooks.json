{
  "description": "CC Version Updator plugin hooks",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/scripts/version-check.sh\"",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
